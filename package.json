{
  "name": "express-rest-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "author": "Studio Karsa",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspace server test",
    "start": "yarn workspace website build && pm2 startOrRestart ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js --env production",
    "dev": "pm2 startOrRestart ecosystem.config.js --env development --watch",
    "dev:website": "pm2 startOrRestart ecosystem.config.js --env development --only website --watch",
    "dev:server": "pm2 startOrRestart ecosystem.config.js --env development --only server --watch",
    "dev:stop": "pm2 stop ecosystem.config.js --env development --watch",
    "dev:restart": "pm2 restart ecosystem.config.js --env development --watch",
    "dev:logs": "pm2 logs ecosystem.config.js --env development --watch"
  },
  "devDependencies": {
    "concurrently": "^6.2.1"
  }
}
